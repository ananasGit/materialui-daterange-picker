{
  "compilerOptions": {
    "incremental": true,
    "outDir": "build",
    "rootDir": "src",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "importHelpers": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "pretty": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src"]
}
